<!-- Sign Up Form -->
<div class="page">
    <div class="container-form"></div>
    <div class="container-form">
        
        <div class="signup-padding">
            
        </div>
        <div class="signup-form signup-img" id="signup-form">
            <div class="container">
              <form method="POST">
                <div class="form-group row rowsignup" style="text-decoration: underline;">
                    Sign Up for a New Account
                </div>
                <div class="form-group row rowsignup">Username:</div>
                <div class="form-group row">
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="username" id="inputName" placeholder="Name">
                  </div>
                </div>
                <div class="form-group row rowsignup">Email:</div>
                <div class="form-group row">
                  <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email">
                  </div>
                </div>
                <div class="form-group row rowsignup">Password:</div>
                <div class="form-group row">
                  <div class="col-sm-10">
                    <input type="password" class="form-control" name="pass" id="inputPassword" placeholder="Password">
                  </div>
                </div>
                <div class="form-group row rowsignup">Password Repeated:</div>
                <div class="form-group row">
                  <div class="col-sm-10">
                    <input type="password" class="form-control" name="repeatpass" id="inputPassword2" placeholder="Password">
                  </div>
                </div>
                <div class="form-group row rowsignup">
                  <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-dark">Sign Up</button>
                  </div>
                </div>
              </form>
            </div>
        </div>

        <div class="signup-padding">
            
        </div>       
    </div>
    <div class="container-form"</div>
</div>
